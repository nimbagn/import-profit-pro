# Configuration de l'application Flask
# Copiez ce fichier vers .env et remplissez les valeurs

# Environnement
FLASK_ENV=production
FLASK_DEBUG=0

# Clé secrète (GÉNÉREZ UNE CLÉ UNIQUE ET SÉCURISÉE)
# Pour générer : python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=votre_secret_key_tres_securise_ici

# Configuration Base de Données
# Option 1 : PostgreSQL (recommandé pour Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2 : MySQL (variables séparées)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=madargn
DB_USER=root
DB_PASSWORD=votre_mot_de_passe_mysql

# Option 3 : URL MySQL complète
# DATABASE_URL=mysql+pymysql://user:password@host:port/database?charset=utf8mb4

# Configuration du pool de connexions (optionnel)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=280

# Configuration du cache Redis (optionnel)
CACHE_TYPE=simple
CACHE_TIMEOUT=3600
REDIS_URL=redis://localhost:6379/0

# Configuration Email (Flask-Mail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USE_SSL=0
MAIL_USERNAME=votre_email@gmail.com
MAIL_PASSWORD=votre_mot_de_passe_application
MAIL_DEFAULT_SENDER=votre_email@gmail.com
MAIL_SUPPRESS_SEND=0

# Configuration de l'application
MAX_CONTENT_MB=25
URL_SCHEME=https

# Configuration SQLAlchemy (optionnel)
SQLALCHEMY_ECHO=0

# Configuration Message Pro API (optionnel)
# Obtenez votre clé API depuis: https://messagepro-gn.com (Tools -> API Keys)
MESSAGEPRO_API_SECRET=votre_cle_api_secrete_messagepro

